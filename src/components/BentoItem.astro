---
import { Image } from "astro:assets";

interface Props {
	classes: string;
	img?: any;
}

const { classes, img } = Astro.props;
---

<article
	class={classes +
		" relative rounded-xl overflow-hidden  border-[0.5px] border-black/10 parent"}>
	<Image
		class="object-cover w-full h-full"
		src={img}
		loading="eager"
		alt="Herramientas"
	/>
</article>

<style>
	img {
		filter: brightness(0.7);
		transition: 0.6s;
	}

	.parent:hover img {
		scale: 1.15;
	}
</style>
