---
import { Image } from "astro:assets";

interface Props {
	img: any;
	benefit: string;
}

const { img, benefit } = Astro.props;
---

<li class="flex flex-col justify-center items-center">
	<div
		class="rounded-full border border-[#935d48] p-1 h-16 w-16 aspect-square overflow-hidden">
		<Image
			src={img}
			alt={benefit}
			width={64}
			height={64}
		/>
	</div>
	<p><strong>{benefit}</strong></p>
</li>
