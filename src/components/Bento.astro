---
import BentoItem from "./BentoItem.astro";
import ReformerImage from "../assets/reformer.webp";
import MatImage from "../assets/mat.webp";
import CadillacImage from "../assets/cadillac.webp";
---

<section
	class="w-full grid grid-cols-10 auto-rows-[20rem] gap-1 mx-auto p-4 max-w-4xl">
	<BentoItem
		classes=" col-span-10 "
		img={ReformerImage}
	/>
	<BentoItem
		classes="  col-span-4"
		img={MatImage}
	/>
	<BentoItem
		classes="  col-span-6"
		img={CadillacImage}
	/>
</section>
